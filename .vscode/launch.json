    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'voxel-game'",
            "cargo": {
                "args": [
                    "build",
                    "--package=voxel-game",
                    "--features=desktop"
                ],
                "filter": {
                    "name": "voxel-game",
                    "kind": "bin"
                }
            },
            "args": ["--new"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_MIN_STACK": "9572920"
            }
        }
    ]
}